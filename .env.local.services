# Local services environment - use Docker database and Redis
# Database (PostgreSQL running in Docker)
DATABASE_URL=postgresql://transcode_user:transcode_pass@localhost:5433/transcode_db

# Redis (running in Docker)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8087
DEBUG=true

# FFmpeg (local system)
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
FFPROBE_PATH=/opt/homebrew/bin/ffprobe
FFMPEG_HWACCEL=none
FFMPEG_GPU_ENABLED=false

# AWS S3 (optional for local)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_ENDPOINT_URL=
AWS_ENDPOINT_PUBLIC_URL=
AWS_BASE_FOLDER=

# Pub/Sub (disabled for local)
PUBSUB_PROJECT_ID=
PUBSUB_TASKS_TOPIC=
PUBSUB_PUBLISHER_CREDENTIALS_PATH=
PUBSUB_SUBSCRIBER_CREDENTIALS_PATH=

# Paths
TEMP_STORAGE_PATH=/tmp/transcode

# Python path
PYTHONPATH=/Users/quang/Documents/skl-workspace/transcode/media-transcode/src