# Local services environment - use Docker database and Redis
# Database (PostgreSQL running in Docker)
DATABASE_URL=postgresql://transcode_user:transcode_pass@localhost:5434/transcode_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8087
DEBUG=true

# FFmpeg (local system)
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
FFPROBE_PATH=/opt/homebrew/bin/ffprobe
FFMPEG_HWACCEL=none
FFMPEG_GPU_ENABLED=false

# AWS S3 (optional for local)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_ENDPOINT_URL=
AWS_ENDPOINT_PUBLIC_URL=
AWS_BASE_FOLDER=

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=src/transcode_service/key.json

# PubSub Configuration (configure these if you want to enable PubSub)
PUBSUB_PROJECT_ID=your-gcp-project-id
PUBSUB_TASKS_TOPIC=transcode-tasks
TASKS_SUBSCRIPTION=transcode-tasks-sub
PUBSUB_RESULTS_TOPIC=transcode-results
PUBSUB_RESULTS_SUBSCRIPTION=transcode-results-sub
PUBSUB_PUBLISHER_CREDENTIALS_PATH=src/transcode_service/key.json
PUBSUB_SUBSCRIBER_CREDENTIALS_PATH=src/transcode_service/key.json

# Face Detection PubSub (optional)
PUBSUB_FACE_DETECTION_TASKS_TOPIC=face-detection-tasks
PUBSUB_FACE_DETECTION_RESULTS_TOPIC=face-detection-results
FACE_DETECTION_SUBSCRIPTION=face-detection-tasks-sub

# Set to true to disable PubSub entirely for local development
DISABLE_PUBSUB=false

# Paths
TEMP_STORAGE_PATH=/tmp/transcode

# Python path
PYTHONPATH=/Users/quang/Documents/skl-workspace/transcode/media-transcode/src